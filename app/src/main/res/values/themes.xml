<resources>
    <!-- Base application theme. -->
    <style name="Theme.Failure" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/niceBlue</item>
        <item name="colorSecondary">@color/gray</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="vectorImageFill">@color/black</item>
        <item name="materialButtonStyle">@style/customButton</item>
    </style>

    <declare-styleable name="vectorImage">
        <attr name="vectorImageFill" format="color" />
    </declare-styleable>

    <style name="customCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/offWhite</item>
    </style>

    <style name="customButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="secondaryButton" parent="customButton">
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="customFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="customToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/darkerGray</item>
    </style>
</resources>