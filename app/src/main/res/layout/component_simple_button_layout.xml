<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpleButtonComponentLayoutRoot">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/simpleButtonNegativeAction"
            android:layout_weight="1"
            style="@style/secondaryButton"
            android:text="Negative Action" />

    <View
            android:id="@+id/simpleButtonDivider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25" />

    <Button
            android:text="Positive Action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/simpleButtonPositiveAction"
            android:layout_weight="1" />
</LinearLayout>
