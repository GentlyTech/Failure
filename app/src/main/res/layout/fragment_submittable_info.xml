<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.SubmittableInfoFragment"
        android:id="@+id/submittableInfoLayoutRoot" >

    <TextView
            android:text="Submittable Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textSubmittableInfoName"
            android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:text="Submittable Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textSubmittableInfoDescription"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/textSubmittableInfoName"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

    <TextView
            android:text="Date Interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textSubmittableInfoDateInterval"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/textSubmittableInfoDescription"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

    <TextView
            android:text="100%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textSubmittableInfoGrade"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="34sp" />

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textSubmittableInfoWeight"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="@+id/textSubmittableInfoGrade"
            app:layout_constraintEnd_toEndOf="@+id/textSubmittableInfoGrade"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textSubmittableInfoGrade" />

    <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            android:id="@+id/barrier"
            app:constraint_referenced_ids="textSubmittableInfoDateInterval,textSubmittableInfoGrade" />

    <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/barrier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider4"
            android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>